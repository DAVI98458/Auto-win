		getgenv().TeamCheck = value
	end
})

AimbotTab:CreateToggle({
	Name = "Dead Check",
	CurrentValue = false,
	Callback = function(value)
		getgenv().DeadCheck = value
	end
})

AimbotTab:CreateToggle({
	Name = "Wall Check",
	CurrentValue = false,
	Callback = function(value)
		getgenv().WallCheck = value
	end
})
