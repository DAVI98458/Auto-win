MainTab:CreateButton({
    Name = "Ativar Anti-Cheat",
    Callback = function()
        local Players = game:GetService("Players")
        local LocalPlayer = Players.LocalPlayer
        local TeleportService = game:GetService("TeleportService")
        local RunService = game:GetService("RunService")
        local mt = getrawmetatable(game)
        local oldNamecall = mt.__namecall
        local oldIndex = mt.__index
        local oldNewIndex = mt.__newindex
        setreadonly(mt, false)

        -- Bloqueia kick via __namecall
        mt.__namecall = newcclosure(function(self, ...)
            local method = getnamecallmethod()
            local args = {...}
            
            if method == "Kick" and self == LocalPlayer then
                warn("[Anti-Cheat] Tentativa de Kick bloqueada.")
                return
            elseif method == "Teleport" then
                warn("[Anti-Cheat] Tentativa de Teleport bloqueada.")
                return
            elseif (method == "FireServer" or method == "InvokeServer") and (self.Name:match("Kick") or self.Name:match("Ban")) then
                warn("[Anti-Cheat] Tentativa de kick/ban via Remote bloqueada.")
                return
            end

            return oldNamecall(self, unpack(args))
        end)

        -- Bloqueia altera√ß√µes suspeitas no Humanoid.Health e Humanoid.HealthChanged
        mt.__index = newcclosure(function(self, key)
            if self:IsA("Humanoid") then
                if key == "Health" then
                    -- Retorna a Health sempre no m√≠nimo 1 para evitar morte for√ßada
                    return math.max(self.Health, 1)
                elseif key == "HealthChanged" then
                    -- Retorna um dummy event para evitar conex√µes suspeitas
                    local dummyEvent = Instance.new("BindableEvent")
                    return dummyEvent.Event
                end
            end
            return oldIndex(self, key)
        end)

        -- Bloqueia atribui√ß√£o suspeita em Humanoid.Health
        mt.__newindex = newcclosure(function(self, key, value)
            if self:IsA("Humanoid") and key == "Health" then
                if value < 1 then
                    warn("[Anti-Cheat] Tentativa de matar Humanoid bloqueada.")
                    return
                end
            end
            return oldNewIndex(self, key, value)
        end)

        -- Prote√ß√£o contra remo√ß√£o de hooks (hookfunction e hookmetamethod)
        if hookfunction then
            local oldHookFunction = hookfunction
            hookfunction = function(func, hook)
                if tostring(func):lower():find("kick") or tostring(func):lower():find("teleport") then
                    return function() warn("[Anti-Cheat] Fun√ß√£o sens√≠vel bloqueada.") end
                end
                return oldHookFunction(func, hook)
            end
        end

        if hookmetamethod then
            local oldHookMetaMethod = hookmetamethod
            hookmetamethod = function(mt, method, hook)
                if tostring(method):lower():find("kick") or tostring(method):lower():find("teleport") then
                    return function() warn("[Anti-Cheat] Metam√©todo sens√≠vel bloqueado.") end
                end
                return oldHookMetaMethod(mt, method, hook)
            end
        end

        -- Substitui Teleport por fun√ß√£o vazia para bloquear teleports
        TeleportService.Teleport = function()
            warn("[Anti-Cheat] TeleportService.Teleport bloqueado.")
        end

        -- Remove RemoteEvents e RemoteFunctions maliciosos constantemente
        local BlockList = {"BanRemote", "KickPlayer", "ReportRemote"}
        RunService.Heartbeat:Connect(function()
            for _, v in ipairs(game:GetDescendants()) do
                if (v:IsA("RemoteEvent") or v:IsA("RemoteFunction")) and table.find(BlockList, v.Name) then
                    v:Destroy()
                    warn("[Anti-Cheat] Remote suspeito removido: "..v.Name)
                end
            end
        end)

        -- Evita desconex√£o for√ßada via Player:Destroy ou LocalPlayer:Destroy
        local oldDestroy = LocalPlayer.Destroy
        LocalPlayer.Destroy = function()
            warn("[Anti-Cheat] Tentativa de destruir Player bloqueada.")
        end

        -- Mensagem de confirma√ß√£o
        Rayfield:Notify({
            Title = "Anti-Cheat",
            Content = "Prote√ß√µes m√°ximas ativadas com sucesso.",
            Duration = 6
        })
    end
})
